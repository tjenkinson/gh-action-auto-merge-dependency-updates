{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "lib": ["dom", "es2016"],
    "types": ["node"],
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
